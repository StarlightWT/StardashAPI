html 
    head
        title Sign up
    link(rel='stylesheet', type='text/css', href='/css/main.css')
    body 
        include modules/navbar.pug
        .form 
            label(for="username") Username 
            input(type="text" name="username" id="username" placeholder="Input your username")
            label(for="email") Email 
            input(type="email" name="email" id="email" placeholder="Input your email")
            label(for="pass") Password
            input(type="password" name="pass" id="pass" placeholder="Input your password")
            button(onclick="submit()") Sign up
            a(href="/login") Already have an account?
        script.
            function submit(){
                const username = document.getElementById("username").value;
                const email = document.getElementById("email").value;
                const password = document.getElementById("pass").value;
            
                fetch("http://stardash.app/v1/users/create", {
                    method: "POST",
                    headers: [['Content-Type', 'application/json']],
                    body: JSON.stringify({
                        username: username, 
                        password: password, 
                        email: email,
                    }),
                }).then((response)=>{
                    return response.json();
                }).then((data) => {
                    window.location = "/dashboard";
                })
            }